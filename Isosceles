#include <iostream>

using namespace std;

int main(){
		
	int x; 
	cout << "Introduce la altura del triangulo: " << endl;
	cin >> x;

	for(int i = 1; i <= x; i++){
		for(int j = 1; j<= x - i; j++){
			cout << "  ";		  // Tiene dos espacios aÃ±adidos tambien al bucle del '*'
		}
		for(int k = 2; k<= 2*i; ++k){
			cout << "* ";
		}
		cout << endl << endl;		 //Notese que tiene dos saltos de linea para que se vea mÃ¡s claro en el terminal
	}
	return 0;

}
